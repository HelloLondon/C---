#include <iostream>
using namespace std;

struct Matrix {
	int row;
	int col;
	int *data;
	void print(){
		for(int i = 0; i < row*col; i ++) {
			cout << *(data + i) << "  ";
		}
	}
	bool flattern(){
		return row==1&&col==1;
	}
	void add(Matrix *added, Matrix *target) {
		int *ad = added->data;
		int *td = target->data;
		for(int i = 0;i < row*col; i ++) {
			*(td + i) = *(ad + i) + *(data + i);
		}
	}
	void multiply(Matrix *muled, Matrix *target) {
		int *md = muled->data;
		int *td = target->data;
		for(int i = 0; i < target->row; i ++) {
			for(int j = 0; j < target->col; j ++) {
				for(int m = 0; m < row; m ++) {
					*(target + i*row + col) += ( (*(data + i*row + m))*(*(md + j + m*row)) );
				}
			}
		}
	}

};
