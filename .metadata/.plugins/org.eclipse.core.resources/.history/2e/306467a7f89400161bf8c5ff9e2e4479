#include <iostream>
using namespace std;

int main () {
	int n ;
	cin >> n;
	int data;
	cin >> data;
	long long maxSum = data;
	long long curSum = 0;
	for (int i = 1; i < n ; i ++) {
		cin >> data;
		curSum += data;
		if (curSum > maxSum) {
			maxSum = curSum;
		}
		if (curSum < 0) {
			curSum = 0;
		}
	}
	cout << maxSum;
}
