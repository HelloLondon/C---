#include <iostream>
#include <string>
class BinaryTree {
private  :
	int root;
	BinaryTree *leftTree;
	BinaryTree *rightTree;
public:
	BinaryTree(int root): root(root), leftTree(NULL), rightTree(NULL){};
	~BinaryTree(){
		if(leftTree!=NULL){
			delete leftTree;
		}
		if(rightTree!=NULL){
			delete rightTree;
		}
	};
	bool add(int val);
	int height();

};
