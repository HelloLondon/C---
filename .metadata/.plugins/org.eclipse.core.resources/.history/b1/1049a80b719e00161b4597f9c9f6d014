#include <iostream>
using namespace std;

long getLastA(long *people, long length,long start,int offset) {
		long result = start + offset ;
		if(result > length) {
			result = result - length + 1;
		}
		long count = length - 1;
		do{
//			people[0] = result;
			people[result] = -1;
			count --;
			if (count == 0) {
				break;
			}
			int i = 0;
			for (;;) {
				result ++;
				if(result  >= length) {
					result = 1;
				}
				if (people[result] > 0) {
					i ++ ;
				}
				if (i == offset) {
					break;
				}
			}
		} while(true);
		return result;
}

int main() {
	long n;
	cin >> n;
	long start;
	cin >> start;
	long people[n + 1];
	for(long i = 0; i <= n; i ++) {
		people[i] = i;
	}
	cout << getLastA(people, n, start, 3) - 1;

}
