#include <iostream>
using namespace std;


int main() {
	long long maxSum = 0;
	long long thisSum = 0;
	int n;
	cin >> n;
	int a;
	for(int i = 0; i < n; i++) {
		cin >> a;
		thisSum += a;

		if(thisSum > maxSum) {
			maxSum = thisSum;
		} else if(thisSum < 0) {
			thisSum = 0;
		}
	}
	cout << maxSum;
	return 0;
}


