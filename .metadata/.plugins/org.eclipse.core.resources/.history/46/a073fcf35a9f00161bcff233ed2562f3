#include <iostream>

class BinaryTree {
	public :
	int root;
	BinaryTree *leftTree;
	BinaryTree *rightTree;

	BinaryTree(int root): root(root), leftTree(NULL), rightTree(NULL){};
	~BinaryTree(){
		delete leftTree;
		delete rightTree;
	};
	BinaryTree* addLeft(int val);
	BinaryTree* addRight(int val);
	bool isBSTree();
	int height();
	int getRoot(){return root;};
};
