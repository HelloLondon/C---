#include <iostream>
using namespace std;

int getLastA(int *people, int length,int start,int offset) {
		int result = start + offset;
		if(result >= length) {
			result -= length;
		}
		int count = length - 1;
		do{
//			people[0] = result;
			people[result] = -1;
			count --;
			if (count == 0) {
				break;
			}
			int i = 0;
			for (;;) {
				result ++;
				if(result  >= length) {
					result = 1;
				}
				if (people[result] > 0) {
					i ++ ;
				}
				if (i == offset) {
					break;
				}
			}
		} while(true);
		return result;
}

int main() {
	int n;
	cin >> n;
	int start;
	cin >> start;
	int people[n];
	for(int i = 0; i < n; i ++) {
		people[i] = i;
	}
	cout << getLastA(people,n,m,3);
}
