#include <iostream>

class BinaryTree {
private  :
	int root;
	BinaryTree *leftTree;
	BinaryTree *rightTree;
public
	BinaryTree(int root): root(root), leftTree(NULL), rightTree(NULL){};
	~BinaryTree(){
		if(leftTree!=NULL){
			delete leftTree;
		}
		if(rightTree!=NULL){
			delete rightTree;
		}
	};
	BinaryTree* addLeft(int val);
	BinaryTree* addRight(int val);
	bool isBSTree();
	int height();
	int max();
	int min();
};
