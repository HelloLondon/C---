#include <iostream>
using namespace std;

int n,m;
int data[14000];

int search (int low, int high) {
	while (low <= high) {
		int set = 1;
		int mid = (low + high) >> 1;
		int sum = 0;
		for (int i = 0; i < n ; i ++) {
			sum += data[i];
			//Out;
			if (sum > mid) {
				set ++;
				sum = data[i];
			}
		}
		if (set <= m) {
			high = mid - 1;
		} else {
			low = mid + 1;
		}
	}
	return low;
}

int main () {
	cin >> m >> n;
	int max = -1;
	for (int i = 0 ; i < n ; i ++ ){
		cin >> data[i];
		if (max < data[i]) {
			max = data[i];
		}
	}
	cout << search(max,n);
}

