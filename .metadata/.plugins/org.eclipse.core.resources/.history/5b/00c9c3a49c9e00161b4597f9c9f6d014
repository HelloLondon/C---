#include "list.h"
using namespace std;

LinkedList::LinkedList() {
	start = new ListNode(-1);
	last = start;
	start->next = last;
	size = 0;
}


LinkedList::~LinkedList() {
	if(start == last) {
		delete start;
		return;
	}
	ListNode *first = start->next;
	do{
		if(first == last) {
			break;
		}
		ListNode *temp = first->next;
		delete first;
		first = temp;
	}while(true);
	delete start;
	delete last;
}

void LinkedList::add(int x) {
	ListNode *update =  new ListNode(x);
	last->next = update ;
	last = update;
	size ++;
}
int LinkedList::get(){
	return last->val;
}

void LinkedList::remove(int value) {
	if(size == 0) {
		return;
	}
	for(ListNode*node = start; node->next != NULL; node = node->next) {
		if(node->next->val == value) {
			remove(node);
		}
	}
}

void LinkedList::remove(ListNode *pre){
	ListNode *toDelete = pre->next;
	pre->next = toDelete->next;
	delete toDelete;
}

void LinkedList::insert(int val, int pos) {
	if(pos > size||pos < 0){
		return;
	}
	if(pos == size) {
		add(val);
	}
	ListNode *toInsert = new ListNode(val);
	//find the node at pos - 1;
	ListNode *pre = start;
	for(int i = 0 ; i < pos; i ++ ){
		pre = pre->next;
	}
	toInsert->next = pre->next;
	pre->next = toInsert;
}

void LinkedList::print() {
	if(size == 0) {
		return;
	}
	for(ListNode*node = start->next; node->next != last; node = node->next) {
			cout << node->val << " ";
	}
	cout << last->val;
}












