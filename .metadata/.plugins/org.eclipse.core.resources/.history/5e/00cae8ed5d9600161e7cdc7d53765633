#include <iostream>
using namespace std;

int n,m;
int data[14000];

long search (long low, long high) {
	while (low <= high) {
		int set = 1;
		long mid = (low + high) /2 ;
		long sum = 0;
		for (int i = 0; i < n ; i ++) {
			sum += data[i];
			//Out;
			if (sum > mid) {
				set ++;
				sum = data[i];
			}
		}
		if (set <= m) {
			high = mid - 1;
		} else {
			low = mid + 1;
		}
	}
	return low;
}

int main () {
	cin >> m >> n;
	long max = -1;
	long sum = 0;
	for (int i = 0 ; i < n ; i ++ ){
		cin >> data[i];
		sum += data[i];
		if (max < data[i]) {
			max = data[i];
		}
	}
	cout << search(max,sum);
}

